{
  "rewrites": [
    {
      "source": "/app/(.*)",
      "destination": "/$1"
    },
    {
      "source": "/app",
      "destination": "/"
    },
    {
      "source": "/auth/avito-callback",
      "destination": "/"
    },
    {
      "source": "/((?!app$|auth).*)",
      "destination": "https://roomi-landing.vercel.app/$1"
    },
    {
      "source": "/",
      "destination": "https://roomi-landing.vercel.app"
    }
  ],
  "cleanUrls": true,
  "trailingSlash": false
}
